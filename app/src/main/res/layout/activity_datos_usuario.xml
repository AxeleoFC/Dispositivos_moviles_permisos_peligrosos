<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_memo"
    android:orientation="vertical"
    tools:context=".ui.activities.DatosUsuarioActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FFC5C5"
        app:cardElevation="15dp"
        app:cardCornerRadius="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/usuarioImg"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:src="@drawable/person"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnCambiarFoto"
        android:layout_width="44dp"
        android:layout_height="52dp"
        android:layout_marginTop="201dp"
        android:backgroundTint="@color/fondo_memo_botones"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera"
        app:layout_constraintBottom_toBottomOf="@+id/btnCambiarFoto"
        app:layout_constraintEnd_toEndOf="@+id/btnCambiarFoto"
        app:layout_constraintStart_toStartOf="@+id/btnCambiarFoto"
        app:layout_constraintTop_toTopOf="@+id/btnCambiarFoto"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/botonLocalizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/fondo_memo_botones"
        android:text="Activar Ubicacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCambiar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonCambiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/fondo_memo_botones"
        android:text="Cambiar datos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etiquetaEmail" />

    <TextView
        android:id="@+id/usuarioTelefono"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuarFechaN" />

    <TextView
        android:id="@+id/etiquetaTelefono"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="TelÃ©fono:"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@+id/usuarioTelefono"
        app:layout_constraintHorizontal_bias="0.306"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etiquetaFechaN" />

    <TextView
        android:id="@+id/usuarioEmail"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuarioTelefono" />

    <TextView
        android:id="@+id/etiquetaEmail"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Email"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@+id/usuarioEmail"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etiquetaTelefono" />

    <TextView
        android:id="@+id/usuarioNick"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card" />

    <TextView
        android:id="@+id/etiquetaNick"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="46dp"
        android:layout_weight="1"
        android:text="Usuario:"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@+id/usuarioNick"
        app:layout_constraintHorizontal_bias="0.306"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card" />

    <TextView
        android:id="@+id/usuarFechaN"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuarioApellido" />

    <TextView
        android:id="@+id/etiquetaFechaN"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Fecha de nacimiento:"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@+id/usuarFechaN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etiquetaApellido" />

    <TextView
        android:id="@+id/usuarioApellido"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuarioNombre" />

    <TextView
        android:id="@+id/etiquetaApellido"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Apellido:"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@+id/usuarioApellido"
        app:layout_constraintHorizontal_bias="0.306"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etiquetaNombre" />

    <TextView
        android:id="@+id/usuarioNombre"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuarioNick" />

    <TextView
        android:id="@+id/etiquetaNombre"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Nombre: "
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@+id/usuarioNombre"
        app:layout_constraintHorizontal_bias="0.306"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etiquetaNick" />


</androidx.constraintlayout.widget.ConstraintLayout>